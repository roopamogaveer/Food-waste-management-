<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/layout_background_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <TextView
                android:id="@+id/name"
                android:layout_width="180dp"
                android:layout_height="match_parent"

                android:fontFamily="@font/comfortaa"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:text="sdfsdf"
                android:textColor="@color/mid_gray"
                android:textSize="23sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_location_on_40_2"
                android:background="@drawable/btn_transparent"
                />


            <TextView
                android:id="@+id/time"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text=""
                android:drawableStart="@drawable/ic_baseline_access_time_24_2"
                android:drawablePadding="3dp"
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:divider="@drawable/linear_divider"
            android:showDividers="middle"
            android:gravity="left">

            <TextView
                android:id="@+id/food_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:textColor="@color/purple_200"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:divider="@drawable/linear_divider"
            android:showDividers="middle"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/human"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Human"
                    android:paddingStart="10dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/animal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Animal"
                    android:paddingStart="10dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/light_gray"
                    android:textSize="13sp"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="30dp"
                android:paddingStart="10dp"
                android:drawablePadding="2dp"
                android:textColor="@color/mid_gray"
                android:textSize="13sp"
                />






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@drawable/linear_divider"
            android:showDividers="middle"
            android:layout_marginTop="10dp"

            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/vehicle"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text=""
                android:drawableStart="@drawable/ic_baseline_bike_scooter_24"
                android:paddingStart="20dp"
                android:drawablePadding="4dp"
                android:textColor="@color/mid_gray"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/comfortaa"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
                android:text=""
                android:drawablePadding="-22dp"
                android:fontFamily="@font/comfortaa"
                android:textAlignment="center"
                android:textColor="@color/part_gray"
                android:textSize="15dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:divider="@drawable/linear_divider"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:width="120dp"
                android:fontFamily="@font/comfortaa"
                android:textAllCaps="false"
                android:background="@drawable/btn_green"
                android:drawableLeft="@drawable/ic_baseline_check_circle_20"
                android:paddingStart="12dp"
                android:paddingEnd="25dp"


                android:text="Accept"

                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:width="120dp"
                android:fontFamily="@font/comfortaa"
                android:background="@drawable/button_primary"
                android:drawableLeft="@drawable/ic_baseline_call_20_2"
                android:paddingStart="15dp"
                android:paddingEnd="35dp"
                android:text="Call"
                android:textColor="@color/white"

                android:textSize="14dp"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>