<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
android:layout_marginTop="10dp"
android:background="@drawable/contri_history_bg"
android:orientation="horizontal"
android:padding="10dp"
android:paddingStart="20dp"
>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contributionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:text="Donate"
        android:textColor="@color/purple_500"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/contributionFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:text="Swadist Hotel Udupi"
        android:textColor="@color/part_gray"
        android:textSize="10dp" />

</LinearLayout>

    <TextView
        android:id="@+id/contributionDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:text="Jan 20, 2022"
        android:textColor="@color/mid_gray"
        android:textSize="10dp" />
</LinearLayout>